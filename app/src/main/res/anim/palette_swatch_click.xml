<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
    android:shareInterpolator="true"
    >

    <scale
        android:duration="@integer/palette_selected_duration_half"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="0.8"
        android:toYScale="0.8"
        android:pivotX="50%"
        android:pivotY="50%"
        />

    <rotate
        android:duration="@integer/palette_selected_duration"
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        />

    <scale
        android:startOffset="@integer/palette_selected_duration_half"
        android:duration="@integer/palette_selected_duration_half"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="1.25"
        android:toYScale="1.25"
        android:pivotX="50%"
        android:pivotY="50%"
        />

</set>