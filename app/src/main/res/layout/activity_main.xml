<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:canvas=".MainActivity">

    <jetsetilly.mandelbrot.RenderCanvas.RenderCanvas_ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fractalView" />

    <jetsetilly.mandelbrot.RenderCanvas.GestureOverlay
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gestureOverlay"
        android:contentDescription="@string/description_gesture_overlay" />

    <jetsetilly.mandelbrot.ProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_progress"
        android:id="@+id/progressView"
        android:visibility="visible"
        android:elevation="10dp"
        android:background="@drawable/progress_background"
        android:layout_margin="20dp"
        android:padding="7dp" />

    <jetsetilly.mandelbrot.MandelbrotActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:visibility="invisible"
        android:background="?attr/colorPrimary"
        android:alpha="0.7" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="120sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="monospace"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/infoPane"
        android:text="Small Text"
        android:padding="7dp"
        android:background="#bbffffff"
        android:backgroundTint="@color/primary_dark_material_light"
        android:textColor="@color/primary_text_default_material_light"
        android:visibility="invisible"
        android:alpha="0" />

</RelativeLayout>


