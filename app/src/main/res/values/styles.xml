<resources>
    <style name="MyActionButtonOverflow" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:src">@drawable/ic_more_vert_24dp</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MainActivityTheme" parent="@style/AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PaletteActivityTheme" parent="@style/AppTheme">
    </style>

    <style name="SettingsActivityTheme" parent="@style/AppTheme">
    </style>


    <!-- theme for dialogs -->

    <style name="Dialog_Theme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/Dialog_Theme.Window</item>
    </style>

    <style name="Dialog_Theme.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialog_appear</item>
        <item name="android:windowExitAnimation">@anim/dialog_disappear</item>
    </style>
</resources>
