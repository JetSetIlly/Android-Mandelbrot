<resources>
    <style name="MyActionButtonOverflow" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MainActivityTheme" parent="@style/AppTheme">
        <!-- uncomment to allow translucent status bar - doesn't really fit with material themes
        <item name="android:windowTranslucentStatus">true</item>
        -->
    </style>

    <style name="PaletteActivityTheme" parent="@style/AppTheme">
    </style>

    <style name="SettingsActivityTheme" parent="@style/Theme.AppCompat.Light">
        <!-- we want an ordinary action bar for other activities -->
    </style>

    <!-- theme for iterations dialog -->

    <style name="Iteration_Dialog_Theme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/Iteration_Dialog_Theme.Window</item>
    </style>

    <style name="Iteration_Dialog_Theme.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/up_quick_nofade</item>
        <item name="android:windowExitAnimation">@anim/down_quick_nofade</item>
    </style>
</resources>
